<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GravatarSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GravatarSample"
    Shell.FlyoutBehavior="Flyout"
    Title="GravatarSample"
    BackgroundColor="Purple">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent Title="Gravatar"
                  ContentTemplate="{DataTemplate local:GravatarPage}"
                  Route="GravatarPage"/>

</Shell>
